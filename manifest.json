
{
  "manifest_version": 2,
  "name": "Mon Extension",
  "version": "1.0",
  "description": "Ajoute un bouton Ã  la page",
  "permissions": ["activeTab"],
  "browser_action": {
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png"
  },
  
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false,
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["src/content.js"]
    }
  ],
  
  "web_accessible_resources": [
    "*"
 ]
}
